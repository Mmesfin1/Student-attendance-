class Student:
    def init(self, name, roll_number):
        self.name = name
        self.roll_number = roll_number
        self.attendance = {}
        self.assessments = {}

    def add_assessment(self, subject, score):
        self.assessments[subject] = score

class AttendanceSystem:
    def init(self):
        self.students = []

    def register_student(self, name, roll_number):
        new_student = Student(name, roll_number)
        self.students.append(new_student)

    def mark_attendance(self, student, date):
        if student.name in self.get_student_list():
            if date in student.attendance:
                return "Attendance already marked for this date."
            else:
                student.attendance[date] = "Present"
                return "Attendance marked successfully."
        else:
            return "Student not found."

    def get_student_list(self):
        return [student.name for student in self.students]

    def add_new_student(self, name, roll_number):
        for student in self.students:
            if student.roll_number == roll_number:
                return "Roll number already exists."
        self.register_student(name, roll_number)
        return "Student added successfully."

    def record_assessment(self, student, subject, score):
        if student in self.students:
            student.add_assessment(subject, score)
            return "Assessment recorded successfully."
        else:
            return "Student not found."

    def teacher_page(self):
        print("\nTeacher Page")
        print("------------")
        print("Name\t\tRoll Number")
        print("--------------------------")
        for student in self.students:
            print(f"{student.name}\t{student.roll_number}")

    def student_page(self, student):
        print("\nStudent Page")
        print("------------")
        print("Date\t\tAttendance")
        print("--------------------------")
        for date, attendance in student.attendance.items():
            print(f"{date}\t{attendance}")

# Helper function to display menu options
def display_menu():
    print("Attendance System Menu")
    print("1. Register Student")
    print("2. Mark Attendance")
    print("3. View Student List")
    print("4. Add New Student")
    print("5. Record Assessment")
    print("6. Teacher Page")
    print("7. Student Page")
    print("8. Exit")

# Example usage
attendance_system = AttendanceSystem()

while True:
    display_menu()
    choice = input("Enter your choice (1-8): ")

    if choice == "1":
        name = input("Enter student name: ")
        roll_number = input("Enter student roll number: ")
        attendance_system.register_student(name, roll_number)
        print("Student registered successfully.")

    elif choice == "2":
        if not attendance_system.students:
            print("No students registered yet.")
            continue

        roll_number = input("Enter student roll number: ")
        date = input("Enter date (YYYY-MM-DD): ")
        for student in attendance_system.students:
            if student.roll_number == roll_number:
                result = attendance_system.mark_attendance(student, date)
                print(result)
                break
        else:
            print("Student not found.")

    elif choice == "3":
        if not attendance_system.students:
            print("No students registered yet.")
            continue

        print("Student List")
        print("------------")
        print("Name\t\tRoll Number")
        print("--------------------------")
        for student in attendance_system.get_student_list():
            print(f"{student.name}\t{student.roll_number}")

    elif choice == "4":
        name = input("Enter student name")